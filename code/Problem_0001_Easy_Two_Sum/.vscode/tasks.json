{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "CTests (colored, portable)",
        "type": "shell",
        "command": "ctest",
        "args": [
            "--test-dir",
            "${workspaceFolder}/build",
            "--output-on-failure"
        ],
        "options": {
            "env": {
                "GTEST_COLOR": "1"
            }
        },
        "group": {
            "kind": "test",
            "isDefault": true
        },
        "presentation": {
            "reveal": "always",
            "panel": "shared",
            "focus": true,
            "showReuseMessage": false
        },
        "problemMatcher": []
    }
]
}
