{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (macOS - CodeLLDB)",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}",
      "args": [],
      "env": {},
      "externalConsole": false,
      "preLaunchTask": "CMake: build",
      "stopOnEntry": false
    },
    {
      "name": "Debug (Linux - GDB)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "CMake: build",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug (Windows - MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "CMake: build",
      "console": "integratedTerminal",
      "stopAtEntry": false
    }
  ]
}
